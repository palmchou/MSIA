<div class="col-xs-2">
  <div class="submenu list-group">
    <%= link_to (t :contact_us), contact_us_path , class: 'list-group-item active'%>
  </div>
</div>
<div class="col-xs-7">
  <ol class="breadcrumb">
    <li><%= link_to (t :home_page), root_path %></li>
    <li class="active"><%= t :contact_us %></li>
  </ol>
  <div class="content">
    <div class="page-header">
      <h2><%= t :contact_us %></h2>
    </div>
    <div class="contact-content">
      <p><%= "#{@contact_infos[:address].info}: #{@contact_infos[:address].content}"%></p>
      <p><%= "#{@contact_infos[:tel].info}: #{@contact_infos[:tel].content}"%></p>
      <p><%= "#{@contact_infos[:fax].info}: #{@contact_infos[:fax].content}"%></p>
      <p><%= "#{@contact_infos[:mail].info}: #{@contact_infos[:mail].content}"%></p>
    </div>
  </div>
</div>
<%= render 'layouts/sidebar',:without => :contact %>