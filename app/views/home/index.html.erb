<div class="col-xs-12">
  <div class="row">
    <div class="col-xs-9">
      <div id="carousel-slides" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-slides" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-slides" data-slide-to="1"></li>
          <li data-target="#carousel-slides" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <%= image_tag 'DSC05114.JPG', size: '700x350' %>
            <div class="carousel-caption">
              澳门软件行业协会
            </div>
          </div>
          <div class="item">
            <%= image_tag 'DSC05115.JPG' %>
            <div class="carousel-caption">
              澳门软件行业协会
            </div>
          </div>
          <div class="item">
            <%= image_tag 'news-1.png' %>
            <div class="carousel-caption">
              知乎问答
            </div>
          </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-slides" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-slides" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-xs-3 msia-info">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title text-center">
            <%= t :introduction %>
          </h3>
        </div>
        <div class="panel-body">
          <%= cc @intro.content %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <div class="panel panel-primary">
        <div class="panel-heading text-center">
          <h3 class="panel-title"><%= link_to (t :msia_notify), news_notice_path %></h3>
        </div>
        <ul class="list-group news-list">
          <% @news[:notice_news].each do |n| %>
            <li class="list-group-item index-news-item">
              <span class="badge"><%= n.created_at.to_date %></span>
              <%= link_to (cc n.title), n %>
            </li>
          <% end %>
          <% news_count = @news[:notice_news].count %>
          <% if news_count < 3 %>
            <% for _ in 1..(3-news_count) %>
              <li class="list-group-item index-news-item">&nbsp;</li>
            <% end %>
          <% end %>
          <li class="list-group-item">
            &nbsp;
            <%= link_to (t :more_info), news_notice_path, class: 'pull-right' %>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="panel panel-primary">
        <div class="panel-heading text-center">
          <h3 class="panel-title"><%= link_to (t :msia_news), news_msia_path %></h3>
        </div>
        <ul class="list-group news-list">
          <% @news[:msia_news].each do |n| %>
            <li class="list-group-item index-news-item">
              <span class="badge"><%= n.created_at.to_date %></span>
              <%= link_to (cc n.title), n %>
            </li>
          <% end %>
          <% news_count = @news[:msia_news].count %>
          <% if news_count < 3 %>
            <% for _ in 1..(3-news_count) %>
              <li class="list-group-item index-news-item">&nbsp;</li>
            <% end %>
          <% end %>
          <li class="list-group-item">
            &nbsp;
            <%= link_to (t :more_info), news_msia_path, class: 'pull-right' %>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="panel panel-primary">
        <div class="panel-heading text-center">
          <h3 class="panel-title"><%= link_to (t :industry_news), news_industry_path %></h3>
        </div>
        <ul class="list-group news-list">
          <% @news[:industry_news].each do |n| %>
            <li class="list-group-item index-news-item">
              <span class="badge"><%= n.created_at.to_date %></span>
              <%= link_to (cc n.title), n %>
            </li>
          <% end %>
          <% news_count = @news[:industry_news].count %>
          <% if news_count < 3 %>
            <% for _ in 1..(3-news_count) %>
              <li class="list-group-item index-news-item">
                &nbsp;
              </li>
            <% end %>
          <% end %>
          <li class="list-group-item">
            &nbsp;
            <%= link_to (t :more_info), news_msia_path, class: 'pull-right' %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>