<% content_for :sub_menu do %>
  <%= link_to '加入我們', new_member_registration_path, class: 'list-group-item' %>
  <%= link_to '會員登入', new_member_session_path, class: 'list-group-item' %>
  <%= link_to '會員名單', members_path, class: 'list-group-item' %>
  <%= link_to '會員討論區', members_forum_path, class: 'list-group-item' %>
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to (t :home_page), root_path %></li>
  <li><%= link_to (t :members_area), new_member_registration_path %></li>
  <li class="active">邮箱确认</li>
<% end %>

<div class="page-header"><h2>重新发送邮箱确认邮件</h2></div>
<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-horizontal', role: 'from' }, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>
  <%= f.input :email, required: true, autofocus: true %>
  <div class="form-group">
    <div class="col-xs-offset-4 col-xs-3">
      <%= f.button :submit, "发送确认邮件" %>
    </div>
  </div>
<% end %>