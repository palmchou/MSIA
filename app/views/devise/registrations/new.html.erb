<% content_for :sub_menu do %>
  <%= link_to (t :join_us), new_member_registration_path, class: 'list-group-item active' %>
  <%= link_to (t :member_login), new_member_session_path, class: 'list-group-item' %>
  <%= link_to (t :member_list), members_path, class: 'list-group-item' %>
  <%= link_to (t :discuss), members_forum_path, class: 'list-group-item' %>
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to (t :home_page), root_path %></li>
  <li><%= link_to (t :members_area), new_member_registration_path %></li>
  <li class="active"><%= t :join_us %></li>
<% end %>

<div class="page-header">
  <h2><%= t :join_us %></h2>
</div>
<p><%= t :newmember_info %></p>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', role: 'form'}, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>
  <%= f.input :email, required: true, autofocus: true, html: { class: 'form-control'} %>
  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
  <%= f.input :password_confirmation, required: true %>
  <div class="form-group">
    <div class="col-xs-offset-4 col-xs-6">
      <%= f.button :submit, "Sign up" %>
    </div>
  </div>
<% end %>

<p><%= t :newmember_ordownload %></p>
<div class="row">
  <div class="col-xs-offset-2 col-xs-3">
    <a href="/download/individual.doc" type="button" class="btn btn-danger"><%= t :newmember_p %></a>
  </div>
  <div class="col-xs-offset-1 col-xs-3">
    <a href="/download/party.doc" type="button" class="btn btn-danger"><%= t :newmember_o %></a>
  </div>
</div>