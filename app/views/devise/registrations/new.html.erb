<% content_for :sub_menu do %>
  <%= link_to (t :join_us), new_member_registration_path, class: 'list-group-item active' %>
  <%= link_to (t :member_login), new_member_session_path, class: 'list-group-item' %>
  <%= link_to (t :member_list), members_path, class: 'list-group-item' %>
  <%= link_to (t :discuss), members_forum_path, class: 'list-group-item' %>
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to (t :home_page), root_path %></li>
  <li><%= link_to (t :members_area), new_member_registration_path %></li>
  <li class="active"><%= t :join_us %></li>
<% end %>

<div class="page-header">
  <h2><%= t :join_us %></h2>
</div>
<p><%= t :newmember_info %></p>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', role: 'form'}, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>
  <%= f.input :member_name, required: true, autofocus: true, label: (t :member_name), html: {class: 'col-xs-2'} %>
  <%= f.input :role, required: true, label: (t :choose_role), collection: [[(t :indiv_member), :indiv], [(t :party_member), :party]], as: :radio_buttons, wrapper: :horizontal_radio_and_checkboxes %>
  <%= f.input :brief, required: true, label: (t :brief), hint:(t :one_word_introduction) %>
  <%= f.input :phone_number, required: true, label: (t :phone_number) %>
  <%= f.input :address, required: true, label: (t :address) %>
  <%= f.input :email, required: true, label: (t :email), html: { class: 'form-control'} %>
  <%= f.input :show, required: true, label: (t :show_or_not), wrapper: :horizontal_radio_and_checkboxes %>
  <%= f.input :password, required: true, label: (t :password), hint: ("#{@minimum_password_length} 字符最少" if @validatable) %>
  <%= f.input :password_confirmation, required: true, label: (t :password_confirmation)%>
  <div class="form-group">
    <div class="col-xs-offset-4 col-xs-6">
      <%= f.button :submit, (t :submit) %>
    </div>
  </div>
<% end %>

<p><%= t :newmember_ordownload %></p>
<div class="row">
  <div class="col-xs-offset-2 col-xs-3">
    <a href="/download/individual.doc" type="button" class="btn btn-danger"><%= t :newmember_p %></a>
  </div>
  <div class="col-xs-offset-1 col-xs-3">
    <a href="/download/party.doc" type="button" class="btn btn-danger"><%= t :newmember_o %></a>
  </div>
</div>