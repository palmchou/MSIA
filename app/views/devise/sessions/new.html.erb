<% content_for :sub_menu do %>
  <%= link_to (t :join_us), new_member_registration_path, class: 'list-group-item' %>
  <%= link_to (t :member_login), new_member_session_path, class: 'list-group-item active' %>
  <%= link_to (t :member_list), members_path, class: 'list-group-item' %>
  <%= link_to (t :discuss), members_forum_path, class: 'list-group-item' %>
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to (t :home_page), root_path %></li>
  <li><%= link_to (t :members_area), new_member_registration_path %></li>
  <li class="active"><%= t :member_login %></li>
<% end %>

<div class="page-header"><h2><%= t :member_login %></h2></div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal', role: 'from'}, wrapper: :horizontal_form) do |f| %>
  <%= f.input :email, required: false, autofocus: true, label: (t :email)%>
  <%= f.input :password, required: false %>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  <div class="form-group">
    <div class="col-xs-offset-4 col-xs-3">
      <%= f.button :submit, "Log in" %>
    </div>
  </div>
<% end %>