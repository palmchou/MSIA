<div class="col-xs-2">
  <div class="submenu list-group">
    <%= link_to '加入我們', new_member_registration_path, class: 'list-group-item' %>
    <%= link_to '會員登入', new_member_session_path, class: 'list-group-item active' %>
    <%= link_to '會員名單', members_path, class: 'list-group-item' %>
    <%= link_to '會員討論區', members_forum_path, class: 'list-group-item' %>
  </div>
</div>
<div class="col-xs-7">
  <ol class="breadcrumb">
    <li><%= link_to (t :home_page), root_path %></li>
    <li><%= link_to (t :members_area), new_member_registration_path %></li>
    <li class="active">會員登入</li>
  </ol>
  <div class="content">
    <div class="page-header"><h2>會員登入</h2></div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal', role: 'from'}, wrapper: :horizontal_form) do |f| %>
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-3">
          <%= f.button :submit, "Log in" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
<%= render 'layouts/sidebar' %>