<div class="col-xs-2">
  <div class="submenu list-group">
    <%= link_to (t :friendly_link), links_path , class: 'list-group-item active'%>
  </div>
</div>
<div class="col-xs-7">
  <ol class="breadcrumb">
    <li><%= link_to (t :home_page), root_path %></li>
    <li class="active"><%= t :friendly_link%></li>
  </ol>
  <div class="content">
    <div class="page-header">
      <h2><%= t :friendly_link%></h2>
    </div>
    <% @links.each do |l| %>
    <div class="link">
      <%= link_to l.title, l.url, target: '_blank' %>
    </div>
    <% end %>
  </div>
</div>
<%= render 'layouts/sidebar',:without => :links %>