<% content_for :sub_menu do %>
  <%= link_to (t :recruit), talents_path , class: 'list-group-item active'%>
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to (t :home_page), root_path %></li>
  <li class="active"><%= t :recruit %></li>
<% end %>

<div class="page-header">
  <h2><%= t :recruit %></h2>
</div>

<%= t :no_info if @talents.nil? %>
<% @talents.each do |t| %>
  <div class='link'>
    <%= link_to (cc t.title), t %>
  </div>
<% end %>