<div class="col-xs-2">
  <div class="submenu list-group">
    <%= link_to '加入我們', new_member_path, class: 'list-group-item' %>
    <%= link_to '會員登入', members_login_path, class: 'list-group-item active' %>
    <%= link_to '會員名單', members_path, class: 'list-group-item' %>
    <%= link_to '會員討論區', members_forum_path, class: 'list-group-item' %>
  </div>
</div>
<div class="col-xs-7">
  <ol class="breadcrumb">
    <li><%= link_to '首頁', root_path %></li>
    <li><%= link_to '會員專區', new_member_path %></li>
    <li class="active">會員登入</li>
  </ol>
  <div class="content">
    <div class="page-header">
      <h2>會員登入</h2>
    </div>
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="email" class="control-label col-xs-4">電子郵箱</label>
        <div class="col-xs-6">
          <input type="email" class="form-control" id="email" placeholder="請輸入註冊填寫的電子郵箱地址">
        </div>
      </div>
      <div class="form-group">
        <label for="password" class="control-label col-xs-4">登錄密碼</label>
        <div class="col-xs-6">
          <input type="password" class="form-control" id="password">
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-3">
          <button type="submit" class="btn btn-default">提交</button>
        </div>
        <div class="col-xs-3 text-right" id="forget-password">
          <a href="#">忘記密碼？</a>
        </div>
      </div>
    </form>
  </div>
</div>
<%= render 'layouts/sidebar' %>